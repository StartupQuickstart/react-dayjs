{
  "name": "@startupquickstart/react-dayjs",
  "version": "0.5.0",
  "description": "React component for the dayjs date library.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && webpack --mode production",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "serve": "webpack serve --mode development --open",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/startupquickstart/react-dayjs.git"
  },
  "keywords": [
    "dayjs",
    "date",
    "moment",
    "time",
    "react",
    "react-component"
  ],
  "author": {
    "name": "Thomas Boles",
    "url": "https://github.com/startupquickstart"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/startupquickstart/react-dayjs/issues"
  },
  "homepage": "https://github.com/startupquickstart/react-dayjs#readme",
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    }
  },
  "peerDependencies": {
    "dayjs": "^1.11.13",
    "react": "^15.6.0 || ^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/react-dom": "^19.0.2",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "babel-loader": "^9.2.1",
    "dayjs": "^1.11.13",
    "eslint": "^9.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "schema-utils": "^4.3.0",
    "terser-webpack-plugin": "^5.3.11",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  }
}
