{
  "env": {
    "browser": true,
    "es2021": true, // Use ES2021 for modern syntax support
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": 12, // Specify ECMAScript version
    "sourceType": "module", // Allows for the use of imports
    "ecmaFeatures": {
      "jsx": true // Enable JSX parsing
    }
  },
  "plugins": [
    "react",
    "unused-imports"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "all",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "all",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ]
  }
}